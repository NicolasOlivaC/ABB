<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Iniciar sesión</title>
    <link rel="icon" href="img/favicon.ico">

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body style="background-image: url('img/abbsignup.jpg'); background-repeat: no-repeat; background-size: cover;">

  
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-4 border-danger shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <img src="https://pbs.twimg.com/profile_images/890663235111849984/RDvrIj7v.jpg" alt="">
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Inicie sesión</h1>
                                    </div>
                                    <form action="/login" method="POST" class="user">
                                        <div class="form-group">
                                            <input type="text" name='username' class="form-control form-control-user" placeholder="RUT" required onfocusout="checkRut(this)">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name='password' class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Contraseña">
                                        </div>
                                        <div class="form-group">
                                            <div class="custom-control custom-checkbox small">

                                            </div>
                                        </div>
                                        <button class="btn btn-primary btn-user btn-block">Ingresar</button>
                                        <hr>
                                        <% if(message.length>0) { %>

                                            <center><div class="alert alert-dark" role="alert">
                                              <%=message%>
                                            </div></center>
            
                                          <%} %>

                                    </form>

                                    <div class="text-center">
                                        <a class="small" href="resetclave">¿Olvidó su contraseña?</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
    <script>

        $(function() {
            $("input[name='username']").on('input', function(e) {
                $(this).val($(this).val().replace(/(K)/g, 'k').replace(/[^0-9+k]/g, ''));
            });
        });
    
        function checkRut(rut)
        {
          var sRut1 = rut.value;      //contador de para saber cuando insertar el . o la -
          if(sRut1.length > 1 && sRut1[sRut1.length - 2] != "-"){
            var sRut = sRut1.substring(0, sRut1.length-1) + "-" + sRut1[sRut1.length-1];
            sRut1 = sRut;
          }
          rut.value = sRut1;
        }
    
    </script>
</body>

</html>
