<% include ../header %>




<!-- ACA COMIENZA EL MAIN--> <!-- ACA COMIENZA EL MAIN-->



<div class="container-fluid">
  <div class="row no-gutters justify-content-center">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
          <div class="card-body">
            <div class="row no-gutters align-items-center">
              <div class="col mr-2">
                <div class="text-xs font-weight-bold text-success text-uppercase mb-1"><center><h4>Agregar cliente</h4></center></div>
                <p>
                  <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            <form action="/addCliente" method="POST" name="agregar">
                                <div class="form-group">
                                  Nombre completo del cliente
                                    <input type="text" name="name" required placeholder="Nombre" class="form-control" required autofocus>
                                </div>
                                <div class="form-group">
                                  RUT del cliente
                                  <input type="text" name="RUT" required placeholder="RUT" class="form-control">
                                </div>
                                <div class="form-group">
                                  Email del cliente
                                    <input type="email" name="email" required placeholder="Correo electrónico" class="form-control">
                                </div>
                                <div class="form-group">
                                Teléfono del cliente
                                    <input type="text" name="telefono" required placeholder="Teléfono" class="form-control">
                                </div>
                                <div class="form-group">
                                Empresa del cliente
                                    <input type="text" name="empresa" required placeholder="Empresa" class="form-control">
                                </div>
  
  
                                <center><button type="submit" class="btn btn-primary" id="botonmod">
                                  Añadir cliente
                                </button></center>
  
  
                                <p>
                                  <center>
                                    <% if(mensaje8.length>0) { %>
                                      <center><div class="alert alert-dark" role="alert">
                                        <%=mensaje8%>
                                      </div></center>
  
                                    <%} %>
                                  </center>
  
                            </form>
                          </div>
                        </div>
                    </div>
                  </div>
                </div>
              </div>

            <div class="col-xl-3 col-md-6 mb-4">
              <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                  <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                      <div class="text-xs font-weight-bold text-primary text-uppercase mb-1"><center><h4>Modificar cliente</h4></center></div>
                      <p>
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                  <form action="/modcliente" method="POST" name="modificar">
                                      <div class="form-group">
                                        Nombre completo del cliente
                                          <input type="text" name="name" required placeholder="Nombre" class="form-control" required autofocus>
                                      </div>
                                      <div class="form-group">
                                        RUT del cliente
                                          <select class="form-control" name="rut_clientes" required>
                                            <option disabled selected>RUT</option>
                                            <% if(data){ %>
                                              <% for (i = 0; i < data.length; i++ ) { %>
                                                  <option value="<%= data[i].rut_clientes %>"><%= data[i].rut_clientes%></option>
                                                <% } %>
                                           <% } %>
                                          </select>
                                      </div>
                                      <div class="form-group">
                                        Email del cliente
                                          <input type="email" name="email" required placeholder="Correo electrónico" class="form-control">
                                      </div>
                                      <div class="form-group">
                                      Teléfono del cliente
                                          <input type="text" name="telefono" required placeholder="Teléfono" class="form-control">
                                      </div>
                                      <div class="form-group">
                                      Empresa del cliente
                                          <input type="text" name="empresa" required placeholder="Empresa" class="form-control">
                                      </div>
        
        
                                      <center><button type="submit" class="btn btn-primary" id="botonmod">
                                        Modificar cliente
                                      </button></center>
        
        
                                      <p>
                                        <center>
                                          <% if(mensaje7.length>0) { %>
                                            <center><div class="alert alert-dark" role="alert">
                                              <%=mensaje7%>
                                            </div></center>
        
                                          <%} %>
                                        </center>
        
                                  </form>
                                </div>
                              </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                      <div class="card border-left-danger shadow h-100 py-2">
                        <div class="card-body">
                          <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                              <div class="text-xs font-weight-bold text-danger text-uppercase mb-1"><center><h4>Eliminar cliente</h4></center></div>
                              <p>
                                <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                          <form action="/deleteCliente" method="POST" name="eliminar">
                                              <div class="form-group">
                                                RUT del cliente
                                                  <select class="form-control" name="RUT" required>
                                                    <option disabled selected>RUT</option>
                                                    <% if(data){ %>
                                                      <% for (i = 0; i < data.length; i++ ) { %>
                                                          <option value="<%= data[i].rut_clientes %>"><%= data[i].rut_clientes%></option>
                                                        <% } %>
                                                   <% } %>
                                                  </select>
                                              </div>
                
                
                                              <center><button type="submit" class="btn btn-primary" id="botonmod">
                                                Eliminar cliente
                                              </button></center>
                
                
                                              <p>
                                                <center>
                                                  <% if(mensaje9.length>0) { %>
                                                    <center><div class="alert alert-dark" role="alert">
                                                      <%=mensaje9%>
                                                    </div></center>
                
                                                  <%} %>
                                                </center>
                
                                          </form>
                                        </div>
                                      </div>
                                  </div>
                                </div>
                              </div>
                            </div> 
                            
                  </div>

            <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

            <thead>
            <tr>

                <th><center>ID</center></th>
                <th><center>RUT</center></th>
                <th><center>Nombre</center></th>
                <th><center>Teléfono</center></th>
                <th><center>Email</center></th>
                <th><center>Empresa</center></th>


            </tr>

            <tbody id = "contenido">
                <% if(data){ %>
                    <% for (i = 0; i < data.length; i++ ) { %>
                    <tr>
                        <td><center><%= data[i].id_clientes %> </center></td>
                        <td><center><%= data[i].rut_clientes %></center></td>
                        <td><center><%= data[i].nombre %></center></td>
                        <td><center><%= data[i].telefono %></center></td>
                        <td><center><%= data[i].email %></center></td>
                        <td><center><%= data[i].empresa %></center></td>
                    </tr>
                    <% } %>
                <% } %>

            </tbody>


            </thead>
        </tbody>
        </table>





        <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->



    </div>
    <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->


    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
